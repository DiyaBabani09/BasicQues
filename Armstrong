public class Armstrong{
public static void main(String args[]){
int n=153;
int t1,t2=n;
//countdigit
int len=0;
while(t1!=0){
len++;
t1/=10;
}
int sum=0;
while(t2!=0){
int r=t2%10;
for(int i=1;i<=len;i++)
{
sum+=r*i;
System.out.println(sum);
}
if(sum==n){
System.out.println("no Is Armstrong");
} 
else{
System.out.println("no Is Armstrong");
}
}
}
}
